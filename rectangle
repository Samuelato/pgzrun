import pgzrun
import random
WIDTH=400
HEIGHT=400
def draw():
  screen.fill("black")
  le=400
  br=200
  for i in range(30):
    red=random.randint(0,255)
    green=random.randint(0,255)
    blue=random.randint(0,255)
    col=red,green,blue 
   
    rect=Rect((0,0),(le,br))
    rect.center=200,200
    screen.draw.rect(rect,col)
    le-=10
    br+=10


pgzrun.go()
